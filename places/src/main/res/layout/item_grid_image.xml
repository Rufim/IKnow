<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cardView"
                                    card_view:cardCornerRadius="8dp"
                                    card_view:cardBackgroundColor="?attr/colorPrimary">

    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:background="@drawable/rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/descr_image"
        android:elevation="8dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dip"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="false"
        android:progress="0"
        android:visibility="gone"
        android:layout_gravity="center"
        android:max="101"
        android:progressDrawable="@drawable/progress_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/content_type"
        android:layout_gravity="left|bottom"
        android:textSize="@dimen/type_text_size"
        android:layout_marginLeft="@dimen/type_text_left_margin"
        android:layout_marginBottom="@dimen/type_text_bot_margin"
        android:textColor="@color/primary_text_default_material_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="@dimen/title_text_size"
        android:id="@+id/place" android:layout_gravity="left|top"
        android:layout_marginTop="@dimen/title_text_top_margin"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_marginLeft="@dimen/title_text_left_margin"
        android:textIsSelectable="false"
        android:maxLines="4"/>

</android.support.v7.widget.CardView>